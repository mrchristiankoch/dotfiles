
# C-a :source .screenrc

termcapinfo xterm* ti@:te@
startup_message off
vbell off
autodetach on
altscreen on
shelltitle "$ |bash"
defscrollback 10000
defutf8 on
nonblock on

#escape ``
#escape `e

# BIND ESCAPE TO F11!
# bindkey -k F1 command

hardstatus alwayslastline                                                                                                                          

hardstatus string "%{= KW}%-w%{= rW}%n %t%{-}%+w %-= %m/%d %c:%s"
#bind 'R' screen ssh s1554463@sunfire16
#bind 'R' screen -t sunfire16 ssh s1554463@sunfire16
bind 'q' quit

# configure tabs/terminals
screen -t shell 0 
screen -t host 1 ssh host  
screen -t host 2 ssh host2 
screen -t host 4 ssh host3 

